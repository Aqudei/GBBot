<mah:MetroWindow
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Class="GMB_And_Selenium.Views.SettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GMB_And_Selenium.Views"
        mc:Ignorable="d"
        Title="SettingsView" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="Username" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="348" mah:TextBoxHelper.Watermark="Username"/>
        <PasswordBox x:Name="Password" HorizontalAlignment="Left" Margin="10,52,0,0" VerticalAlignment="Top" Width="348" mah:TextBoxHelper.Watermark="Password"/>
        <Button x:Name="SaveSettings" Content="Save Settings" HorizontalAlignment="Left" Margin="258,95,0,0" VerticalAlignment="Top" Width="100"/>
        <Button x:Name="OpenLogs" Content="Open Logs Folder" HorizontalAlignment="Left" Margin="443,135,0,0" VerticalAlignment="Top" Width="122"/>

    </Grid>
</mah:MetroWindow>
